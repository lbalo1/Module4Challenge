@page
@model DadJokesModel
@{
    ViewData["Title"] = "Dad Jokes Generator";
}

<div class="text-center">
    <h1 class="display-4">Dad Jokes Generator</h1>
    
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Display current jokes -->
            <div class="jokes-container mb-4">
                @if (Model.CurrentJokes != null && Model.CurrentJokes.Count > 0)
                {
                    @foreach (var joke in Model.CurrentJokes)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <h5 class="alert-heading"> Dad Joke:</h5>
                            <p class="mb-0">@joke</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Click the button below to load some jokes!</p>
                }
            </div>

            <!-- Button to get more jokes -->
            <form method="post" class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-repeat"></i> Get More Jokes
                </button>
            </form>
        </div>
    </div>
</div>
